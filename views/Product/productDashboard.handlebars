<h2>Product Dashboard</h2>

<section class="products-container">

    <table border="1" style="text-align: center;">
        <thead>
            <th>Categary</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Inventory</th>
            <th>BestSeller</th>
            <th>Product Image</th>
            <th>Product Picture</th>
            <th>Is Category</th>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>
                    <a href="" class="product-title-category">{{this.category}}</a>
                </td>
                <td>
                    <a href="" class="product-title-category">{{this.title}}</a>

                </td>
                <td style="max-width: 300px;">
                    <span>{{this.description}}</span>
                </td>
                <td>
                    <span>{{this.price}}</span>
                </td>
                <td>
                    <span>{{this.inventory}}</span>
                </td>
                <td>
                    <span>{{this.bestSeller}}</span>
                </td>
                <td style="max-width: 150px;word-break:break-all;">
                    <span>{{this.productPic}}</span>
                </td>
                <td>
                    <img src="/uploads/{{this.productPic}}">
                </td>
                <td>
                    <span>{{this.isCategory}}</span>
                </td>              
                <td>
                    <a href="/product/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                    <a href="/product/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                </td>
            </tr>

            {{else}}
            <td colspan="9">
                <p>No products in the database</p>
            </td>

            {{/each}}
        </tbody>
    </table>

</section>

<div id="producs-links-holder">
    <br><br>
    <a href="/product/add">Add a Product</a>
</div>
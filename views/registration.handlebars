<div class="regisForm">
    <form action="/registration" method="POST">
        <h2>Create account</h2>
        <label class="regisLable" for="yourName">Your name</label><br>
        <input type="text" id="yourName" name="yourName" class="regisInput" value="{{this.yourName}}"><br>
        <p class="errorMessage">{{this.errorN}}</p>
        <label class="regisLable" for="email">Email</label><br>
        <input type="email" id="email" name="email" class="regisInput" value="{{this.email}}"><br>
        <p class="errorMessage">{{this.errorE}}</p>
        <label class="regisLable" for="password">Password</label><br>
        <input type="password" id="password" name="password" placeholder="At least 6 characters" class="regisInput"
            value="{{this.password}}"><br>
        <p class="errorMessage">{{this.errorP}}</p>
        <p class="regisI">i <span class="regisPass">Passwords must consist of at least 6 characters.</span>
        </p><br>
        <label class="regisLable" for="passwordAgain">Password again</label><br>
        <input type="password" id="passwordAgain" name="passwordAgain" class="regisInput"
            value="{{this.passwordAgain}}"><br>
        <p class="errorMessage">{{this.errorPP}}</p>
        <input type="submit" class="regisSub" value="Create your Amazon account"><br>
        <br>
        <br>
        <p>Already have an account?<a href="/login">Sign in</a></p>
    </form>
</div>